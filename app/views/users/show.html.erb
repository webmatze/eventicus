<% content_for :title, @user.display_name %>

<div class="space-y-8">
  <!-- Profile Header -->
  <div class="bg-gradient-to-r from-indigo-500 via-purple-500 to-pink-500 rounded-2xl shadow-lg overflow-hidden">
    <!-- Cover gradient -->
    <div class="h-32 sm:h-40"></div>
    
    <!-- Profile info -->
    <div class="bg-white dark:bg-gray-800 px-6 pb-6">
      <div class="flex flex-col sm:flex-row items-center sm:items-end gap-4 -mt-16 sm:-mt-12">
        <!-- Avatar -->
        <div class="flex-shrink-0">
          <% if @user.avatar.attached? %>
            <%= image_tag @user.avatar, class: "w-32 h-32 rounded-full object-cover ring-4 ring-white dark:ring-gray-800 shadow-lg" %>
          <% else %>
            <div class="w-32 h-32 rounded-full bg-gradient-to-br from-indigo-400 to-purple-500 flex items-center justify-center ring-4 ring-white dark:ring-gray-800 shadow-lg">
              <span class="text-4xl font-bold text-white"><%= @user.display_name.first.upcase %></span>
            </div>
          <% end %>
        </div>

        <!-- Info -->
        <div class="flex-1 text-center sm:text-left sm:pb-2">
          <h1 class="text-2xl font-bold text-gray-900 dark:text-white"><%= @user.display_name %></h1>
          <p class="text-gray-500 dark:text-gray-400">@<%= @user.username %></p>
        </div>

        <!-- Edit Button -->
        <% if user_signed_in? && current_user == @user %>
          <div class="sm:pb-2">
            <%= link_to edit_user_registration_path, class: "inline-flex items-center gap-2 px-4 py-2 bg-gray-100 hover:bg-gray-200 dark:bg-gray-700 dark:hover:bg-gray-600 text-gray-700 dark:text-gray-300 rounded-lg text-sm font-medium transition" do %>
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
              </svg>
              <%= t("users.show.edit_profile") %>
            <% end %>
          </div>
        <% end %>
      </div>

      <!-- Bio & Stats -->
      <div class="mt-6 space-y-4">
        <% if @user.bio.present? %>
          <p class="text-gray-700 dark:text-gray-300 max-w-2xl"><%= @user.bio %></p>
        <% end %>

        <div class="flex flex-wrap items-center gap-6 text-sm text-gray-500 dark:text-gray-400">
          <div class="flex items-center gap-1">
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
            </svg>
            <%= t("users.show.member_since", date: l(@user.created_at, format: :date_only)) %>
          </div>
          <div class="flex items-center gap-1">
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11.049 2.927c.3-.921 1.603-.921 1.902 0l1.519 4.674a1 1 0 00.95.69h4.915c.969 0 1.371 1.24.588 1.81l-3.976 2.888a1 1 0 00-.363 1.118l1.518 4.674c.3.922-.755 1.688-1.538 1.118l-3.976-2.888a1 1 0 00-1.176 0l-3.976 2.888c-.783.57-1.838-.197-1.538-1.118l1.518-4.674a1 1 0 00-.363-1.118l-3.976-2.888c-.784-.57-.38-1.81.588-1.81h4.914a1 1 0 00.951-.69l1.519-4.674z"/>
            </svg>
            <span><strong><%= @created_events.count %></strong> <%= t("users.show.events_created") %></span>
          </div>
          <div class="flex items-center gap-1">
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0z"/>
            </svg>
            <span><strong><%= @user.attended_events.count %></strong> <%= t("users.show.events_attended") %></span>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Tabs -->
  <div x-data="{ activeTab: 'created' }" class="space-y-6">
    <!-- Tab Navigation -->
    <div class="border-b border-gray-200 dark:border-gray-700">
      <nav class="flex gap-8" aria-label="Tabs">
        <button 
          @click="activeTab = 'created'"
          :class="activeTab === 'created' ? 'border-indigo-500 text-indigo-600 dark:text-indigo-400' : 'border-transparent text-gray-500 hover:text-gray-700 hover:border-gray-300 dark:text-gray-400 dark:hover:text-gray-300'"
          class="whitespace-nowrap py-4 px-1 border-b-2 font-medium text-sm transition flex items-center gap-2"
        >
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11.049 2.927c.3-.921 1.603-.921 1.902 0l1.519 4.674a1 1 0 00.95.69h4.915c.969 0 1.371 1.24.588 1.81l-3.976 2.888a1 1 0 00-.363 1.118l1.518 4.674c.3.922-.755 1.688-1.538 1.118l-3.976-2.888a1 1 0 00-1.176 0l-3.976 2.888c-.783.57-1.838-.197-1.538-1.118l1.518-4.674a1 1 0 00-.363-1.118l-3.976-2.888c-.784-.57-.38-1.81.588-1.81h4.914a1 1 0 00.951-.69l1.519-4.674z"/>
          </svg>
          <%= t("users.show.created_events") %>
          <span class="bg-gray-100 dark:bg-gray-700 text-gray-600 dark:text-gray-300 py-0.5 px-2 rounded-full text-xs"><%= @created_events.count %></span>
        </button>

        <button 
          @click="activeTab = 'attending'"
          :class="activeTab === 'attending' ? 'border-indigo-500 text-indigo-600 dark:text-indigo-400' : 'border-transparent text-gray-500 hover:text-gray-700 hover:border-gray-300 dark:text-gray-400 dark:hover:text-gray-300'"
          class="whitespace-nowrap py-4 px-1 border-b-2 font-medium text-sm transition flex items-center gap-2"
        >
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0z"/>
          </svg>
          <%= t("users.show.attending") %>
          <span class="bg-gray-100 dark:bg-gray-700 text-gray-600 dark:text-gray-300 py-0.5 px-2 rounded-full text-xs"><%= @attended_events.count %></span>
        </button>
      </nav>
    </div>

    <!-- Tab Content: Created Events -->
    <div x-show="activeTab === 'created'" x-transition:enter="transition ease-out duration-200" x-transition:enter-start="opacity-0" x-transition:enter-end="opacity-100">
      <% if @created_events.any? %>
        <div class="grid gap-6 md:grid-cols-2 lg:grid-cols-3">
          <% @created_events.each do |event| %>
            <%= render "events/event_card", event: event %>
          <% end %>
        </div>
      <% else %>
        <div class="bg-gray-50 dark:bg-gray-800 rounded-lg p-8 text-center">
          <svg class="w-12 h-12 text-gray-400 mx-auto mb-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
          </svg>
          <p class="text-gray-500"><%= t("users.show.no_created_events") %></p>
          <% if user_signed_in? && current_user == @user %>
            <%= link_to t("events.index.add_event"), new_event_path, class: "inline-flex items-center gap-2 mt-4 px-4 py-2 bg-indigo-600 hover:bg-indigo-700 text-white rounded-lg text-sm font-medium transition" %>
          <% end %>
        </div>
      <% end %>
    </div>

    <!-- Tab Content: Attending Events -->
    <div x-show="activeTab === 'attending'" x-cloak x-transition:enter="transition ease-out duration-200" x-transition:enter-start="opacity-0" x-transition:enter-end="opacity-100">
      <% if @attended_events.any? %>
        <div class="grid gap-6 md:grid-cols-2 lg:grid-cols-3">
          <% @attended_events.each do |event| %>
            <%= render "events/event_card", event: event %>
          <% end %>
        </div>
      <% else %>
        <div class="bg-gray-50 dark:bg-gray-800 rounded-lg p-8 text-center">
          <svg class="w-12 h-12 text-gray-400 mx-auto mb-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0z"/>
          </svg>
          <p class="text-gray-500"><%= t("users.show.no_attending_events") %></p>
          <%= link_to t("users.show.browse_events"), events_path, class: "inline-flex items-center gap-2 mt-4 px-4 py-2 bg-indigo-600 hover:bg-indigo-700 text-white rounded-lg text-sm font-medium transition" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
