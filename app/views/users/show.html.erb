<% content_for :title, @user.display_name %>

<div class="space-y-8">
  <!-- Profile Header -->
  <div class="bg-white dark:bg-gray-800 rounded-xl shadow-sm border border-gray-200 dark:border-gray-700 p-6">
    <div class="flex flex-col sm:flex-row items-center sm:items-start gap-6">
      <!-- Avatar -->
      <% if @user.avatar.attached? %>
        <%= image_tag @user.avatar, class: "w-24 h-24 rounded-full object-cover ring-4 ring-gray-100 dark:ring-gray-700" %>
      <% else %>
        <div class="w-24 h-24 rounded-full bg-indigo-100 dark:bg-indigo-900/50 flex items-center justify-center ring-4 ring-gray-100 dark:ring-gray-700">
          <span class="text-3xl font-bold text-indigo-600 dark:text-indigo-400"><%= @user.display_name.first.upcase %></span>
        </div>
      <% end %>

      <!-- Info -->
      <div class="text-center sm:text-left">
        <h1 class="text-2xl font-bold text-gray-900 dark:text-white"><%= @user.display_name %></h1>
        <p class="text-gray-500">@<%= @user.username %></p>
        <p class="text-sm text-gray-500 mt-2">
          Mitglied seit <%= l(@user.created_at, format: :date_only) %>
        </p>

        <div class="flex flex-wrap gap-4 mt-4 justify-center sm:justify-start">
          <div class="text-center">
            <span class="block text-xl font-bold text-gray-900 dark:text-white"><%= @created_events.count %></span>
            <span class="text-sm text-gray-500">Events erstellt</span>
          </div>
          <div class="text-center">
            <span class="block text-xl font-bold text-gray-900 dark:text-white"><%= @attended_events.count %></span>
            <span class="text-sm text-gray-500">Teilnahmen</span>
          </div>
        </div>
      </div>

      <% if user_signed_in? && current_user == @user %>
        <div class="sm:ml-auto">
          <%= link_to edit_user_registration_path, class: "inline-flex items-center gap-2 px-4 py-2 bg-gray-100 hover:bg-gray-200 dark:bg-gray-700 dark:hover:bg-gray-600 text-gray-700 dark:text-gray-300 rounded-lg text-sm font-medium transition" do %>
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
            </svg>
            Profil bearbeiten
          <% end %>
        </div>
      <% end %>
    </div>
  </div>

  <!-- Created Events -->
  <div>
    <h2 class="text-xl font-semibold text-gray-900 dark:text-white mb-4">
      Erstellte Events
      <span class="text-gray-500 font-normal">(<%= @created_events.count %>)</span>
    </h2>

    <% if @created_events.any? %>
      <div class="grid gap-6 md:grid-cols-2 lg:grid-cols-3">
        <% @created_events.limit(6).each do |event| %>
          <%= render "events/event_card", event: event %>
        <% end %>
      </div>
    <% else %>
      <p class="text-gray-500">Noch keine Events erstellt.</p>
    <% end %>
  </div>

  <!-- Attended Events -->
  <div>
    <h2 class="text-xl font-semibold text-gray-900 dark:text-white mb-4">
      Nimmt teil an
      <span class="text-gray-500 font-normal">(<%= @attended_events.count %>)</span>
    </h2>

    <% if @attended_events.any? %>
      <div class="grid gap-6 md:grid-cols-2 lg:grid-cols-3">
        <% @attended_events.limit(6).each do |event| %>
          <%= render "events/event_card", event: event %>
        <% end %>
      </div>
    <% else %>
      <p class="text-gray-500">Nimmt an keinen kommenden Events teil.</p>
    <% end %>
  </div>
</div>
