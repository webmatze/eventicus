<% content_for :title, "#{@event.title} bearbeiten" %>

<div class="max-w-2xl mx-auto">
  <!-- Back Link -->
  <div class="mb-6">
    <%= link_to event_path(@event), class: "inline-flex items-center gap-2 text-gray-600 hover:text-indigo-600 transition" do %>
      <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/>
      </svg>
      Zurück zum Event
    <% end %>
  </div>

  <!-- Header -->
  <div class="mb-8">
    <h1 class="text-3xl font-bold text-gray-900 dark:text-white">Event bearbeiten</h1>
    <p class="mt-2 text-gray-600 dark:text-gray-400"><%= @event.title %></p>
  </div>

  <!-- Form Card -->
  <div class="bg-white dark:bg-gray-800 rounded-xl shadow-sm border border-gray-200 dark:border-gray-700 p-6 sm:p-8">
    <%= render "form", event: @event %>
  </div>

  <!-- Danger Zone -->
  <div class="mt-8 bg-red-50 dark:bg-red-900/20 border border-red-200 dark:border-red-800 rounded-xl p-6">
    <h2 class="text-lg font-semibold text-red-700 dark:text-red-400 mb-2">Gefahrenzone</h2>
    <p class="text-sm text-red-600 dark:text-red-300 mb-4">
      Das Löschen eines Events kann nicht rückgängig gemacht werden.
    </p>
    <%= button_to event_path(@event), 
        method: :delete, 
        data: { turbo_confirm: "Bist du sicher? Dieses Event wird unwiderruflich gelöscht." },
        class: "px-4 py-2 bg-red-600 hover:bg-red-700 text-white font-medium rounded-lg transition" do %>
      <span class="flex items-center gap-2">
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"/>
        </svg>
        Event löschen
      </span>
    <% end %>
  </div>
</div>
