<% content_for :title, @event.title %>
<% content_for :description, truncate(strip_tags(@event.description), length: 160) %>

<!-- Flash messages container for Turbo Streams -->
<div id="flash-messages" class="max-w-4xl mx-auto mb-4 space-y-2"></div>

<article class="max-w-4xl mx-auto">
  <!-- Back Link -->
  <div class="mb-6">
    <%= link_to events_path, class: "inline-flex items-center gap-2 text-gray-600 hover:text-indigo-600 transition" do %>
      <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/>
      </svg>
      <%= t("events.show.back") %>
    <% end %>
  </div>

  <!-- Hero Section -->
  <header class="relative rounded-2xl overflow-hidden mb-8">
    <div class="aspect-[21/9] bg-gradient-to-br from-indigo-500 to-purple-600">
      <% if @event.cover_image.attached? %>
        <%= image_tag @event.cover_image, class: "w-full h-full object-cover" %>
      <% else %>
        <div class="absolute inset-0 flex items-center justify-center">
          <svg class="w-24 h-24 text-white/30" fill="currentColor" viewBox="0 0 24 24">
            <path d="M19 4h-1V2h-2v2H8V2H6v2H5c-1.11 0-1.99.9-1.99 2L3 20c0 1.1.89 2 2 2h14c1.1 0 2-.9 2-2V6c0-1.1-.9-2-2-2zm0 16H5V9h14v11z"/>
          </svg>
        </div>
      <% end %>
    </div>
    
    <!-- Category Badge -->
    <% if @event.category %>
      <div class="absolute top-4 left-4">
        <span class="bg-white/90 backdrop-blur text-gray-800 text-sm font-medium px-3 py-1.5 rounded-full shadow-sm">
          <%= @event.category.name %>
        </span>
      </div>
    <% end %>

    <!-- Status Badge -->
    <div class="absolute top-4 right-4">
      <% if @event.happening_now? %>
        <span class="bg-green-500 text-white text-sm font-medium px-3 py-1.5 rounded-full shadow-sm animate-pulse">
          ðŸ”´ Live
        </span>
      <% elsif @event.past? %>
        <span class="bg-gray-500 text-white text-sm font-medium px-3 py-1.5 rounded-full shadow-sm">
          Vergangen
        </span>
      <% end %>
    </div>
  </header>

  <div class="grid lg:grid-cols-3 gap-8">
    <!-- Main Content -->
    <div class="lg:col-span-2 space-y-8">
      <!-- Title & Meta -->
      <div>
        <h1 class="text-3xl sm:text-4xl font-bold text-gray-900 dark:text-white mb-4">
          <%= @event.title %>
        </h1>
        
        <!-- Creator Info -->
        <div class="flex items-center gap-3 text-gray-600 dark:text-gray-400">
          <% if @event.user.avatar.attached? %>
            <%= image_tag @event.user.avatar, class: "w-10 h-10 rounded-full object-cover" %>
          <% else %>
            <div class="w-10 h-10 rounded-full bg-indigo-100 flex items-center justify-center">
              <span class="text-indigo-600 font-medium"><%= @event.user.display_name.first.upcase %></span>
            </div>
          <% end %>
          <div>
            <p class="text-sm">
              Erstellt von 
              <%= link_to @event.user.display_name, user_path(@event.user.username), class: "font-medium text-gray-900 dark:text-white hover:text-indigo-600" %>
            </p>
            <p class="text-xs text-gray-500">
              <%= time_ago_in_words(@event.created_at) %> ago
            </p>
          </div>
        </div>
      </div>

      <!-- Description -->
      <div class="prose prose-gray dark:prose-invert max-w-none">
        <h2 class="text-xl font-semibold text-gray-900 dark:text-white mb-4">Beschreibung</h2>
        <div class="text-gray-700 dark:text-gray-300 whitespace-pre-wrap"><%= @event.description %></div>
      </div>

      <!-- Attendees Section -->
      <%= render "events/attendees_section", event: @event %>

      <!-- Comments Section -->
      <div id="comments-section" class="border-t border-gray-200 dark:border-gray-700 pt-8">
        <h2 class="text-xl font-semibold text-gray-900 dark:text-white mb-4">
          <%= t("comments.title") %>
          <span id="comments-count" class="text-gray-500 font-normal">(<%= @event.comments.count %>)</span>
        </h2>
        
        <div id="comments-list" class="space-y-4">
          <% if @event.comments.any? %>
            <%= render partial: "events/comments/comment", collection: @event.comments.oldest_first, as: :comment %>
          <% end %>
        </div>

        <% if @event.comments.empty? %>
          <p id="no-comments" class="text-gray-500 mb-4"><%= t("comments.none") %></p>
        <% end %>

        <!-- Comment Form -->
        <% if user_signed_in? %>
          <%= render partial: "events/comments/form", locals: { event: @event, comment: @event.comments.build } %>
        <% else %>
          <div class="mt-6 p-4 bg-gray-50 dark:bg-gray-800 rounded-lg text-center">
            <p class="text-gray-600 dark:text-gray-400">
              <%= link_to t("comments.sign_in"), new_user_session_path, class: "text-indigo-600 hover:text-indigo-500 font-medium" %> 
              <%= t("comments.to_comment") %>
            </p>
          </div>
        <% end %>
      </div>
    </div>

    <!-- Sidebar -->
    <aside class="lg:col-span-1">
      <div class="sticky top-8 space-y-6">
        <!-- Attend Card -->
        <div class="bg-white dark:bg-gray-800 rounded-xl shadow-sm border border-gray-200 dark:border-gray-700 p-6">
          <div id="attendance-button">
            <%= render "events/attendance_button", event: @event, attending: @attending %>
          </div>
        </div>

        <!-- Event Info Card -->
        <div class="bg-white dark:bg-gray-800 rounded-xl shadow-sm border border-gray-200 dark:border-gray-700 p-6 space-y-5">
          <!-- Date & Time -->
          <div class="flex gap-4">
            <div class="flex-shrink-0 w-12 h-12 bg-indigo-100 dark:bg-indigo-900/50 rounded-lg flex items-center justify-center">
              <svg class="w-6 h-6 text-indigo-600 dark:text-indigo-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
              </svg>
            </div>
            <div>
              <h3 class="font-medium text-gray-900 dark:text-white"><%= t("events.show.when") %></h3>
              <p class="text-sm text-gray-600 dark:text-gray-400">
                <%= l(@event.starts_at, format: :long) %>
              </p>
              <p class="text-xs text-gray-500 mt-1">
                Dauer: <%= @event.duration_in_hours %> Stunden
              </p>
            </div>
          </div>

          <!-- Location -->
          <div class="flex gap-4">
            <div class="flex-shrink-0 w-12 h-12 bg-green-100 dark:bg-green-900/50 rounded-lg flex items-center justify-center">
              <svg class="w-6 h-6 text-green-600 dark:text-green-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/>
              </svg>
            </div>
            <div>
              <h3 class="font-medium text-gray-900 dark:text-white"><%= t("events.show.where") %></h3>
              <p class="text-sm text-gray-600 dark:text-gray-400">
                <%= link_to @event.location.name, location_path(@event.location), class: "hover:text-indigo-600" %>
              </p>
              <p class="text-xs text-gray-500">
                <%= @event.location.street %><br>
                <%= @event.location.zip %> <%= @event.location.city.name %>
              </p>
            </div>
          </div>

          <!-- Category -->
          <% if @event.category %>
            <div class="flex gap-4">
              <div class="flex-shrink-0 w-12 h-12 bg-purple-100 dark:bg-purple-900/50 rounded-lg flex items-center justify-center">
                <svg class="w-6 h-6 text-purple-600 dark:text-purple-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.994 1.994 0 013 12V7a4 4 0 014-4z"/>
                </svg>
              </div>
              <div>
                <h3 class="font-medium text-gray-900 dark:text-white">Kategorie</h3>
                <p class="text-sm text-gray-600 dark:text-gray-400">
                  <%= link_to @event.category.name, category_path(@event.category), class: "hover:text-indigo-600" %>
                </p>
              </div>
            </div>
          <% end %>
        </div>

        <!-- Actions Card -->
        <div class="bg-white dark:bg-gray-800 rounded-xl shadow-sm border border-gray-200 dark:border-gray-700 p-6">
          <div class="space-y-3">
            <!-- iCal Download -->
            <a href="#" class="flex items-center gap-3 text-gray-700 dark:text-gray-300 hover:text-indigo-600 dark:hover:text-indigo-400 transition">
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
              </svg>
              <span class="text-sm">Zum Kalender hinzufÃ¼gen</span>
            </a>

            <!-- Share (Placeholder) -->
            <button type="button" class="flex items-center gap-3 text-gray-700 dark:text-gray-300 hover:text-indigo-600 dark:hover:text-indigo-400 transition w-full">
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8.684 13.342C8.886 12.938 9 12.482 9 12c0-.482-.114-.938-.316-1.342m0 2.684a3 3 0 110-2.684m0 2.684l6.632 3.316m-6.632-6l6.632-3.316m0 0a3 3 0 105.367-2.684 3 3 0 00-5.367 2.684zm0 9.316a3 3 0 105.368 2.684 3 3 0 00-5.368-2.684z"/>
              </svg>
              <span class="text-sm">Teilen</span>
            </button>

            <% if user_signed_in? && @event.user == current_user %>
              <hr class="border-gray-200 dark:border-gray-700">
              <%= link_to edit_event_path(@event), class: "flex items-center gap-3 text-gray-700 dark:text-gray-300 hover:text-indigo-600 dark:hover:text-indigo-400 transition" do %>
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
                </svg>
                <span class="text-sm"><%= t("common.edit") %></span>
              <% end %>
            <% end %>
          </div>
        </div>
      </div>
    </aside>
  </div>
</article>
