<% content_for :title, t("events.index.title") %>

<div class="space-y-6">
  <!-- Header -->
  <div class="flex flex-col sm:flex-row justify-between items-start sm:items-center gap-4">
    <h1 class="text-3xl font-bold text-gray-900 dark:text-white"><%= t("events.index.title") %></h1>
    
    <!-- Filters -->
    <div class="flex flex-wrap gap-2">
      <%= link_to t("events.index.upcoming"), events_path(filter: nil), 
          class: "px-4 py-2 rounded-lg text-sm font-medium transition #{params[:filter].blank? ? 'bg-indigo-600 text-white' : 'bg-gray-100 text-gray-700 hover:bg-gray-200'}" %>
      <%= link_to t("events.index.past"), events_path(filter: :past), 
          class: "px-4 py-2 rounded-lg text-sm font-medium transition #{params[:filter] == 'past' ? 'bg-indigo-600 text-white' : 'bg-gray-100 text-gray-700 hover:bg-gray-200'}" %>
      <%= link_to t("events.index.all"), events_path(filter: :all), 
          class: "px-4 py-2 rounded-lg text-sm font-medium transition #{params[:filter] == 'all' ? 'bg-indigo-600 text-white' : 'bg-gray-100 text-gray-700 hover:bg-gray-200'}" %>
    </div>
  </div>

  <!-- Events Grid -->
  <% if @events.any? %>
    <div class="grid gap-6 md:grid-cols-2 lg:grid-cols-3">
      <% @events.each do |event| %>
        <%= render "events/event_card", event: event %>
      <% end %>
    </div>

    <!-- Pagination -->
    <div class="flex justify-center mt-8">
      <%== pagy_nav(@pagy) if @pagy.pages > 1 %>
    </div>
  <% else %>
    <div class="text-center py-12">
      <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
      </svg>
      <h3 class="mt-2 text-sm font-medium text-gray-900 dark:text-white"><%= t("events.index.no_events") %></h3>
      <% if user_signed_in? %>
        <p class="mt-1 text-sm text-gray-500">
          <%= link_to t("events.index.add_event"), new_event_path, class: "text-indigo-600 hover:text-indigo-500" %>
        </p>
      <% end %>
    </div>
  <% end %>
</div>
