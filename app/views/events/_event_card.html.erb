<article class="bg-white dark:bg-gray-800 rounded-xl shadow-sm border border-gray-200 dark:border-gray-700 overflow-hidden hover:shadow-md transition group">
  <%= link_to event_path(event), class: "block" do %>
    <!-- Cover Image or Placeholder -->
    <div class="aspect-video bg-gradient-to-br from-indigo-500 to-purple-600 relative">
      <% if event.cover_image.attached? %>
        <%= image_tag event.cover_image, class: "w-full h-full object-cover" %>
      <% else %>
        <div class="absolute inset-0 flex items-center justify-center">
          <svg class="w-16 h-16 text-white/50" fill="currentColor" viewBox="0 0 24 24">
            <path d="M19 4h-1V2h-2v2H8V2H6v2H5c-1.11 0-1.99.9-1.99 2L3 20c0 1.1.89 2 2 2h14c1.1 0 2-.9 2-2V6c0-1.1-.9-2-2-2zm0 16H5V9h14v11z"/>
          </svg>
        </div>
      <% end %>
      
      <!-- Category Badge -->
      <% if event.category %>
        <span class="absolute top-3 left-3 bg-white/90 text-gray-800 text-xs font-medium px-2.5 py-1 rounded-full">
          <%= event.category.name %>
        </span>
      <% end %>
    </div>

    <div class="p-5">
      <!-- Date -->
      <div class="flex items-center gap-2 text-sm text-indigo-600 dark:text-indigo-400 font-medium mb-2">
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
        </svg>
        <time datetime="<%= event.starts_at.iso8601 %>">
          <%= l(event.starts_at, format: :long) %>
        </time>
      </div>

      <!-- Title -->
      <h2 class="text-lg font-semibold text-gray-900 dark:text-white group-hover:text-indigo-600 dark:group-hover:text-indigo-400 transition line-clamp-2">
        <%= event.title %>
      </h2>

      <!-- Location -->
      <div class="flex items-center gap-2 text-sm text-gray-500 dark:text-gray-400 mt-2">
        <svg class="w-4 h-4 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/>
        </svg>
        <span class="truncate"><%= event.location.name %>, <%= event.location.city.name %></span>
      </div>

      <!-- Footer: Attendees -->
      <div class="flex items-center justify-between mt-4 pt-4 border-t border-gray-100 dark:border-gray-700">
        <div class="flex items-center gap-1 text-sm text-gray-500">
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"/>
          </svg>
          <span><%= event.attendee_count %></span>
        </div>
        
        <% if event.happening_now? %>
          <span class="bg-green-100 text-green-800 text-xs font-medium px-2.5 py-0.5 rounded-full animate-pulse">
            Live
          </span>
        <% end %>
      </div>
    </div>
  <% end %>
</article>
