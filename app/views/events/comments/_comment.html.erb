<%= turbo_frame_tag dom_id(comment) do %>
  <div id="<%= dom_id(comment) %>" class="flex gap-3 group">
    <% if comment.user&.avatar&.attached? %>
      <%= image_tag comment.user.avatar, class: "w-8 h-8 rounded-full object-cover flex-shrink-0" %>
    <% else %>
      <div class="w-8 h-8 rounded-full bg-gray-200 dark:bg-gray-700 flex items-center justify-center flex-shrink-0">
        <span class="text-gray-600 dark:text-gray-300 text-xs font-medium">
          <%= comment.user&.display_name&.first&.upcase || "?" %>
        </span>
      </div>
    <% end %>
    <div class="flex-1 bg-gray-50 dark:bg-gray-800 rounded-lg px-4 py-3">
      <div class="flex items-center justify-between mb-1">
        <div class="flex items-center gap-2">
          <span class="font-medium text-gray-900 dark:text-white text-sm">
            <%= comment.user&.display_name || "Anonym" %>
          </span>
          <span class="text-xs text-gray-500">
            <%= time_ago_in_words(comment.created_at) %> ago
          </span>
        </div>
        <% if user_signed_in? && comment.user == current_user %>
          <%= button_to event_comment_path(comment.commentable, comment),
              method: :delete,
              form: { data: { turbo_confirm: t("comments.confirm_delete") } },
              class: "opacity-0 group-hover:opacity-100 transition-opacity text-gray-400 hover:text-red-500" do %>
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"/>
            </svg>
          <% end %>
        <% end %>
      </div>
      <p class="text-gray-700 dark:text-gray-300 text-sm whitespace-pre-wrap"><%= comment.body %></p>
    </div>
  </div>
<% end %>
