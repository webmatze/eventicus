<% content_for :title, t("cities.show.events_in", city: @city.name) %>

<div class="space-y-6">
  <!-- Header -->
  <div class="bg-white dark:bg-gray-800 rounded-xl shadow-sm border border-gray-200 dark:border-gray-700 p-6">
    <div class="flex items-center gap-4">
      <div class="flex-shrink-0 w-16 h-16 bg-indigo-100 dark:bg-indigo-900/50 rounded-xl flex items-center justify-center">
        <svg class="w-8 h-8 text-indigo-600 dark:text-indigo-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"/>
        </svg>
      </div>
      <div>
        <h1 class="text-2xl font-bold text-gray-900 dark:text-white"><%= @city.name %></h1>
        <p class="text-gray-600 dark:text-gray-400"><%= @city.state %>, <%= @city.country %></p>
        <div class="flex gap-4 mt-2 text-sm text-gray-500">
          <span><%= @city.events.upcoming.count %> kommende Events</span>
          <span><%= @city.locations.count %> Locations</span>
        </div>
      </div>
    </div>
  </div>

  <!-- Events -->
  <div>
    <h2 class="text-xl font-semibold text-gray-900 dark:text-white mb-4">
      <%= t("cities.show.events_in", city: @city.name) %>
    </h2>

    <% if @events.any? %>
      <div class="grid gap-6 md:grid-cols-2 lg:grid-cols-3">
        <% @events.each do |event| %>
          <%= render "events/event_card", event: event %>
        <% end %>
      </div>

      <div class="flex justify-center mt-8">
        <%== pagy_nav(@pagy) if @pagy.pages > 1 %>
      </div>
    <% else %>
      <p class="text-gray-500"><%= t("events.index.no_events") %></p>
    <% end %>
  </div>
</div>
