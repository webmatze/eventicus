<% content_for :title, t("cities.show.events_in", city: @city.name) %>

<div class="space-y-8">
  <!-- Back Link -->
  <div>
    <%= link_to cities_path, class: "inline-flex items-center gap-2 text-gray-600 hover:text-indigo-600 transition" do %>
      <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/>
      </svg>
      <%= t("cities.show.back_to_cities") %>
    <% end %>
  </div>

  <!-- Header -->
  <div class="bg-gradient-to-r from-indigo-500 to-purple-600 rounded-2xl shadow-lg p-8 text-white">
    <div class="flex items-center gap-6">
      <div class="flex-shrink-0 w-20 h-20 bg-white/20 backdrop-blur rounded-2xl flex items-center justify-center">
        <svg class="w-10 h-10 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"/>
        </svg>
      </div>
      <div>
        <h1 class="text-3xl font-bold"><%= @city.name %></h1>
        <p class="text-white/80 text-lg"><%= @city.state %>, <%= @city.country %></p>
        <div class="flex flex-wrap gap-6 mt-3">
          <div class="flex items-center gap-2">
            <svg class="w-5 h-5 text-white/70" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
            </svg>
            <span><%= @city.events.upcoming.count %> <%= t("cities.show.upcoming_events") %></span>
          </div>
          <div class="flex items-center gap-2">
            <svg class="w-5 h-5 text-white/70" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
            </svg>
            <span><%= @city.locations.count %> <%= t("cities.show.locations") %></span>
          </div>
          <div class="flex items-center gap-3 ml-auto">
            <%= link_to feeds_city_path(@city.slug, format: :rss), class: "flex items-center gap-1 bg-white/20 hover:bg-white/30 px-3 py-1 rounded-full text-sm transition", title: "RSS Feed" do %>
              <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24"><path d="M6.18 15.64a2.18 2.18 0 0 1 2.18 2.18C8.36 19 7.38 20 6.18 20C5 20 4 19 4 17.82a2.18 2.18 0 0 1 2.18-2.18M4 4.44A15.56 15.56 0 0 1 19.56 20h-2.83A12.73 12.73 0 0 0 4 7.27V4.44m0 5.66a9.9 9.9 0 0 1 9.9 9.9h-2.83A7.07 7.07 0 0 0 4 12.93V10.1z"/></svg>
              RSS
            <% end %>
            <%= link_to feeds_city_ical_path(@city.slug, format: :ics), class: "flex items-center gap-1 bg-white/20 hover:bg-white/30 px-3 py-1 rounded-full text-sm transition", title: "iCal Feed" do %>
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/></svg>
              iCal
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Two Column Layout -->
  <div class="grid lg:grid-cols-3 gap-8">
    <!-- Events (Main Column) -->
    <div class="lg:col-span-2">
      <h2 class="text-xl font-semibold text-gray-900 dark:text-white mb-4 flex items-center gap-2">
        <svg class="w-6 h-6 text-indigo-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
        </svg>
        <%= t("cities.show.events_in", city: @city.name) %>
      </h2>

      <% if @events.any? %>
        <div class="grid gap-6 md:grid-cols-2">
          <% @events.each do |event| %>
            <%= render "events/event_card", event: event %>
          <% end %>
        </div>

        <div class="flex justify-center mt-8">
          <%== pagy_nav(@pagy) if @pagy.pages > 1 %>
        </div>
      <% else %>
        <div class="bg-gray-50 dark:bg-gray-800 rounded-lg p-8 text-center">
          <svg class="w-12 h-12 text-gray-400 mx-auto mb-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
          </svg>
          <p class="text-gray-500"><%= t("events.index.no_events") %></p>
        </div>
      <% end %>
    </div>

    <!-- Locations (Sidebar) -->
    <div class="lg:col-span-1">
      <h2 class="text-xl font-semibold text-gray-900 dark:text-white mb-4 flex items-center gap-2">
        <svg class="w-6 h-6 text-green-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
        </svg>
        <%= t("cities.show.locations") %>
      </h2>

      <% if @locations.any? %>
        <div class="space-y-3">
          <% @locations.each do |location| %>
            <%= render "locations/location_card", location: location %>
          <% end %>
        </div>
      <% else %>
        <div class="bg-gray-50 dark:bg-gray-800 rounded-lg p-6 text-center">
          <p class="text-gray-500"><%= t("cities.show.no_locations") %></p>
        </div>
      <% end %>
    </div>
  </div>
</div>
